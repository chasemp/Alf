{
  "name": "github-pages-pwa-cache-busting-research",
  "version": "1.0.0",
  "description": "Comprehensive research platform for testing cache busting strategies with GitHub Pages for PWA apps",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "analyze": "node scripts/analyze-cache-behavior.js",
    "benchmark": "node scripts/run-benchmarks.js",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:production": "node scripts/deploy-production.js",
    "production": "npm run deploy:production"
  },
  "keywords": [
    "pwa",
    "cache-busting",
    "github-pages",
    "service-worker",
    "performance",
    "research"
  ],
  "author": "Cache Busting Research Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "gh-pages": "^6.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vite-plugin-pwa": "^0.16.0"
  },
  "dependencies": {
    "workbox-window": "^7.0.0",
    "workbox-sw": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts"
    ]
  }
}